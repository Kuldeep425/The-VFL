<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:padding="20dp"
    tools:context=".TestingAct">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:padding="10dp"
        android:text="Be a Vocal for Local"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.65"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnToHomePage"
            android:onClick="back2Home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="HOME PAGE"
            android:textColor="@android:color/background_dark"
            android:textSize="16sp"
            android:layout_marginVertical="5dp"/>

        <Button
            android:id="@+id/btnToAddProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:background="@color/colorPrimary"
            android:onClick="addProduct"
            android:text="ADD new PRODUCT"
            android:textColor="@android:color/background_dark"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnToViewProducts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="68dp"
            android:background="@color/colorPrimary"
            android:onClick="viewMyProducts"
            android:text="VIEW my PRODUCTS"

            android:textColor="@android:color/background_dark"
            android:textSize="16sp"
            android:layout_marginVertical="5dp"/>

        <Button
            android:id="@+id/btnToPastOrders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="64dp"
            android:background="@color/colorPrimary"
            android:onClick="pastOrders"
            android:text="My past orders"
            android:textColor="@android:color/background_dark"
            android:textSize="16sp"
           android:layout_marginVertical="5dp"/>

        <Button
            android:id="@+id/btnToViewCart"
            android:layout_width="match_parent"
            android:onClick="myCart"
            android:layout_height="wrap_content"
            android:layout_marginBottom="64dp"
            android:background="@color/colorPrimary"
            android:text="My Cart"
            android:textColor="@android:color/background_dark"
            android:textSize="16sp"
            android:layout_marginVertical="5dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>